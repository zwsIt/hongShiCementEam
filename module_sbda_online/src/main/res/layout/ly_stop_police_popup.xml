<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shap_fillet_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/shap_fillet_theme_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:text="运行记录"
        android:textColor="@color/white"
        android:textSize="@dimen/fontSize_15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemStopPoliceStopType"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:tag="itemStopPoliceStopType"
            app:content_hint="请选择停机类别"
            app:editable="true"
            app:key_size="14"
            app:text="停机类别" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemStopPoliceStopReason"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:tag="itemStopPoliceStopReason"
            app:content_hint="请选择停机原因"
            app:editable="true"
            app:key_size="14"
            app:text="停机原因" />

        <com.supcon.mes.mbap.view.CustomEditText
            android:id="@+id/itemStopPoliceStopExplain"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:tag="itemStopPoliceStopExplain"
            app:edit_hint="请输入停机原因"
            android:focusable="false"
            app:key="停机说明"
            app:key_size="14" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemStopPoliceEamIds"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:tag="itemStopPoliceEamIds"
            app:content_hint="请选择附属设备"
            app:editable="true"
            app:key="附属设备"
            app:key_size="14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_8"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_stop_police_save"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/themeColor"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/btn_stop_police_cancel"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@color/themeColor"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>