<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical">

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemSpareLedgerNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_30"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemSpareLedgerNameTv"
            app:content_hint="--"
            app:key="设    备:"
            app:max_lines="1" />


        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemSpareLedgerModelTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemSpareLedgerModelTv"
            app:content_hint="--"
            app:gravity="center"
            app:key="规格型号:"
            app:max_lines="100" />


        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemSpareLedgerTypeTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemSpareLedgerTypeTv"
            app:content_hint="--"
            app:gravity="center"
            app:key="设备类型:"
            app:max_lines="100" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemSpareLedgerFileStateTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemSpareLedgerFileStateTv"
            android:visibility="gone"
            app:content_hint="--"
            app:gravity="center"
            app:key="建档标记:"
            app:max_lines="100" />

    </LinearLayout>

    <TextView
        android:id="@+id/eamStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="10dp"
        android:background="@drawable/eam_status_use"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:tag="eamStatus"
        android:text="在用"
        android:textColor="@color/white"
        android:textSize="12sp" />
</RelativeLayout>
