<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical">

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemSparePartReceiveTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_30"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemSparePartReceiveTv"
            app:content_hint="--"
            app:gravity="center"
            app:key="零部件:"
            app:max_lines="1" />


        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemSpareReceiveModelTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemSpareReceiveModelTv"
            app:content_hint="--"
            app:gravity="center"
            app:key="规格型号:"
            app:max_lines="100" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemSpareReceiveEamTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemSpareReceiveEamTv"
            app:content_hint="--"
            app:gravity="center"
            app:key="所属设备:"
            app:max_lines="100" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.supcon.mes.mbap.view.CustomTextView
                android:id="@+id/itemSpareReceiveStaffTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dp_5"
                android:tag="itemSpareReceiveStaffTv"
                app:content_hint="--"
                app:gravity="center"
                app:key="领用人:"
                app:max_lines="100" />

            <com.supcon.mes.mbap.view.CustomTextView
                android:id="@+id/itemSpareReceiveUsageTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dp_5"
                android:tag="itemSpareReceiveUsageTv"
                app:content_hint="--"
                app:gravity="center"
                app:key="领用量:" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
